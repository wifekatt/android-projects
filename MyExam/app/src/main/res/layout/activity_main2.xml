<?xml version="1.0" encoding="utf-8"?>
<LinearLayout tools:context=".Main2Activity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="TextView"
        android:paddingTop="20dp"
        android:paddingLeft="320dp"
        android:id="@+id/UserConnected"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Calculatrice"
        android:paddingTop="20dp"
        android:paddingLeft="70dp"
        android:id="@+id/Concatenation"
        android:textSize="40dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp" />
    <LinearLayout tools:context=".Main2Activity"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/NameIdDest"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="40dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp" />

        <EditText
            android:id="@+id/Res"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="40dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>
    <EditText
        android:id="@+id/PasswordIdDest"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <LinearLayout tools:context=".Main2Activity"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="+"
        android:id="@+id/button2"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="-"
            android:id="@+id/button3"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="/"
            android:id="@+id/button4"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="*"
            android:id="@+id/button5"/>

    </LinearLayout>
    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="140dp"
        android:id="@+id/textView2"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="121dp"
        android:text="QUITTER"
        android:id="@+id/button"
        android:layout_marginLeft="140dp"/>



    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/listView"/>

</LinearLayout>